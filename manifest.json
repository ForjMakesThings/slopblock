{
  "manifest_version": 2,
  "name": "Slopblock",
  "version": "1.2",
  "description": "Blocks AI Videos/Channels on youtube",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "options_ui": {
    "page": "settings.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
    "browser_specific_settings": {
    "gecko": {
      "id": "@slopblock",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "youtube/youtube.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    },
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "lib.js"
      ],
      "run_at": "document_start",
      "all_frames": false
    }
  ]
}